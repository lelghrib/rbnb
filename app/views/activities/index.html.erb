  <% end %>
<h2 class="text-center mb-4">Choose wich activity you want to do</h2>
<%= link_to "New activtiy", new_activity_path %>
<div class="container d-flex justify-content-around mt-4">

<div id="map">
  <%= image_tag "map_activities.png", alt: "map" %>
</div>



<div class="activities_list cards color_white text-center">
<% @activities.each do |activity| %>
  <div class="card-category">



  <h3><%= activity.name %><span>  <%= activity.type_activity %></span></h3>
  <div class="card_bottom_info d-flex justify-content-between align-items-center">
  <p id="nb_people"><%= activity.max_participants %> people</p>
  <p id="price"><%= activity.price %> â‚¬</p>
  </div>


   </div>
<div class="description">
  <p>Start on : <%= activity.start_date %></p>
  <p>leave at :<%= activity.end_date %></p>
  <p>description : <%= activity.description %></p>

</div>

<% end %>
</div>



</div>

