<div class="container-message">
  <h1>Messages</h1>
  <div class="message-inside">
    <% @messages.each do |message| %>
      <% if message.sender == current_user  %>
        <div class="message-box sender-box d-flex justify-content-between">
          <p><%= message.content %></p>
          <p class="message-date"><%= message.date.strftime("%Y-%d-%m") %> <%= message.date.strftime("at %I:%M%p") %></p>
        </div>
      <% else %>
        <div class="message-box receiver-box d-flex justify-content-between">
          <p><%= message.content %></p>
          <p class="message-date"><%= message.date.strftime("%Y-%d-%m") %><%= message.date.strftime("at %I:%M%p") %></p>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-message form-inline">
    <%= simple_form_for([@booking, @message]) do  |f| %>
    <%= f.text_field :content, placeholder: "Your message", class: 'form-control' %>
    <%= f.button :submit, class: "btn btn-flat", value: 'Send' %>
    <% end %>
  </div>
</div>
